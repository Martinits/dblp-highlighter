{
    "name": "dblp highlighter",
    "version": "1.0",
    "description": "Highlight CCFA/B/C in dblp.org",
    "manifest_version": 3,
    "action": {
        "default_icon": {
            "260": "images/phd.png"
        },
        "default_title": "dblp highlighter",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://dblp.org/search?q=*",
                "https://dblp.uni-trier.de/search?q=*",
                "https://dblp.dagstuhl.de/search?q=*"
            ],
            "js": ["jquery.min.js", "jquery.csv.js", "highlight.js"]
        }
    ],
    "host_permissions": [
        "https://dblp.org/search?q=*",
        "https://dblp.uni-trier.de/search?q=*",
        "https://dblp.dagstuhl.de/search?q=*"
    ],
    "permissions": [
        "tabs"
    ],
    "web_accessible_resources": [
        {
            "resources": [ "database.csv"],
            "matches": [
                "https://dblp.org/*",
                "https://dblp.uni-trier.de/*",
                "https://dblp.dagstuhl.de/*"
            ]
        }
    ]
}
